<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background_cms"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:scaleX="1.1"
    android:scaleY="1.1">


    <!-- Time Picker -->

    <!-- Set Alarm Button -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:amPmTextColor="@color/black"
        android:background="@color/golden"
        android:numbersTextColor="@color/black"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:theme="@style/TimePickerFixTheme"
        android:timePickerMode="spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_outline_lt_brown"
            android:paddingHorizontal="10dp"
            android:text="@string/cancel"
            android:textAlignment="gravity"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSetAlarm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_outline_orange"
            android:paddingHorizontal="10dp"
            android:text="@string/set_alarm"
            android:textAlignment="gravity"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>
